<script>
    function copyServerLinkSidebar() {
        try {
            navigator.clipboard.writeText("mc.blockyalleys.com");
            document.getElementById('click-to-copy-text-sidebar').innerHTML = "Copied!";
        } catch (error) {
            alert(error);
        }
    }

    function resetCopyButtonSidebar() {
        setTimeout(function() {
            document.getElementById('click-to-copy-text-sidebar').innerHTML = "Click to copy";  
        }, 200);
    }

    var isSidebarOpen = false;

    function openSidebar() {
        var element = document.getElementById('sidebar');        
        if (isSidebarOpen) {            
            element.style.display = "none";
            isSidebarOpen = false;

        }
        else {
            element.style.display = "block";
            isSidebarOpen = true;
        }

    }

    function closeSidebar() {
        var element = document.getElementById('sidebar');
        element.style.display = "none";
    }
</script>